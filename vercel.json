{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "export PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=1 && pip install -r requirements.txt --break-system-packages",
  "devCommand": "cd frontend && npm run dev",
  "framework": null,
  "functions": {
    "api/**/*.py": {
      "excludeFiles": "{**/__pycache__/**,**/node_modules/**,**/dist/**,**/tests/**,**/static/**,**/assets/**,**/*.exe,**/*.msi,**/*.zip}",
      "maxDuration": 60
    }
  },
  "env": {
    "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}